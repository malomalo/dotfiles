alias ..='cd ..'
alias ls='ls -hGF'
alias la='ls -ahGF'
alias ll='ls -lhaG'
alias grep='grep --color=auto'
alias mkdir='mkdir -p'
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'
alias vi='/Applications/MacVim.app/Contents/MacOS/Vim'
alias untar='tar -xvf'
alias diff='colordiff'
alias df='df -h'
alias du='du -c -h'
alias ping='ping -c 5'
alias utime='date +%s'
alias epoch='date +%s'

# Git
alias g='git'
alias gitx='gitx --all'

# Heroku
alias h='heroku'

# privileged access
if [ $UID -ne 0 ]; then
	alias reboot='sudo reboot'
	alias halt='sudo halt'
fi

# Code shorts
alias r='cd ~/code/redistogo'
