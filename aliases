alias ..='cd ..'
alias ls='ls -hGF'
alias la='ls -ahGF'
alias ll='ls -lhaG'
alias grep='grep --color=auto'
alias mkdir='mkdir -p'
alias untar='tar -xvf'
alias diff='colordiff'
alias df='df -h'
alias du='du -c -h'
alias ping='ping -c 5'
alias utime='date +%s'
alias epoch='date +%s'
alias be='bundle exec'
alias utc='date -u'

# Git
alias g='git'
alias gitx='gitx --all'

# privileged access
if [ $UID -ne 0 ]; then
	alias reboot='sudo reboot'
	alias halt='sudo halt'
fi

# Code shorts
alias r='cd ~/code/redistogo'

alias ez='wget --user=malomalo -c --ask-password '

alias mls='cd ~/code/mls'
