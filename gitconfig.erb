[core]
	autocrlf = input
	excludesfile = ~/.gitignore
    whitespace = trailing-space
[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[apply]
	whitespace = fix
[diff]
	color = auto
[status]
	color = auto
[merge]
    log = true
[push]
    default = simple
[alias]
	ci = commit
	co = checkout
	st = status
	cl = clone
	b = branch
	lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	cp = cherry-pick
